<%= form_for @animal do |f| %>
  <% if @animal.errors.any? %>
    <div id ='errors'>
      <h3><%= pluralize(@animal.errors.count, "error") %> prohibited this animal from being saved:
      </h3>
      <ol>
        <%= @animal.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ol>
    </div>
  <% end %>
  <ul>
    <li class="field">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </li>
    <li class="field">
      <%= f.label :race %>
      <%= f.select :race, Animal.races.map { |r| [r.underscore.humanize.titleize, r.camelize]},
        {:prompt => 'Select one'} %>
    </li>
    <li class="field">
      <%= f.label :age %>
      <%= f.text_field :age %>
    </li>
    <li class="actions">
      <%= f.submit %>
    </li>
  </ul>
<% end %>
